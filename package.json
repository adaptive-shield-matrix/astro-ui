{
  "name": "@adaptive-sm/astro-ui",
  "type": "module",
  "files": [
    "src"
  ],
  "private": false,
  "scripts": {
    "astro": "astro",
    "dev": "nice -5 astro dev",
    "check": "clear && nice -15 astro check --minimumSeverity error",
    "build": "tsc --build && bash scripts/copyAstroFiles.sh",
    "tsc": "tsc",
    "update": "nice -15 bun x npm-check-updates -u && bun i",
    "copyAstroFiles": "bash scripts/copyAstroFiles.sh",
    "update:commit": "bun x npm-check-updates -u && bun i && git add package.json && bun run tsc && git commit -m \"update dependencies\" && git push",
    "clean": "rm -rf ./dist"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@mdi/js": "^7.4.47",
    "@tailwindcss/vite": "^4.1.13",
    "@types/bun": "latest",
    "astro": "^5.13.7",
    "dayjs": "^1.11.18",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-slug": "^6.0.0",
    "remark-toc": "^9.0.0",
    "rollup-plugin-visualizer": "^6.0.3",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2",
    "wrangler": "^4.35.0"
  },
  "prettier": {
    "semi": false,
    "printWidth": 120,
    "trailingComma": "all",
    "plugins": [
      "prettier-plugin-astro"
    ]
  },
  "exports": {
    "./*": "./src/*"
  }
}
