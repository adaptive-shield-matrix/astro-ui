---
import { mdiInformationOutline, mdiArrowRight } from "@mdi/js"
import BaseLayout from "@/layouts/BaseLayout.astro"
import BgColorSelect from "@/layout_parts/BgColorSelect.astro"
import Icon1 from "~/icon/Icon1.astro"
import { classArr } from "~/utils/ui/classArr"
---

<BaseLayout title="Demo Icon">
  <BgColorSelect/>

  <div class={classArr("mt-4 space-y-4")}>
    <div class="flex items-center gap-4">
      <Icon1 path={mdiInformationOutline} class="size-6" title="Info icon"/>
      <span>Default icon</span>
    </div>

    <div class="flex items-center gap-4">
      <Icon1 path={mdiArrowRight} class="size-8 text-blue-500" aria-hidden="true"/>
      <span>Larger custom color icon</span>
    </div>

    <div class="flex items-center gap-4">
      <Icon1 path={mdiInformationOutline} class="size-6 rotate-45"/>
      <span>Rotated icon</span>
    </div>
  </div>
</BaseLayout>