---
import PageCenteredCard from "@/page/PageCenteredCard.astro"
import MinimalLayout from "@/layouts/MinimalLayout.astro"
import { classMerge } from "@/utils/ui/classMerge"
import { classArr } from "@/utils/ui/classArr"

import "./parts/markdown.css"

interface Props {
  title: string
  description?: string
  meta?: Record<string, string>
  class?: string
  innerclass?: string
}

const p = Astro.props
---

<MinimalLayout title={p.title} description={p.description} meta={p.meta}>
  <PageCenteredCard class={classMerge("max-w-5xl my-12", p.class)} classInner={classArr("markdown-body", p.innerclass)}>
    <slot />
  </PageCenteredCard>
</MinimalLayout>
