---
import { mdiInformationOutline, mdiAlertOutline, mdiCodeTags } from "@mdi/js"
import BaseLayout from "@/layouts/BaseLayout.astro"
import Popover1 from "~/popover/Popover1.astro"
import { buttonVariant } from "~/button/buttonCva"
import { classArr } from "~/utils/ui/classArr"
---

<BaseLayout title="Demo Popover1">
  <div class={classArr("mt-4 space-y-6")}>
    <div class="space-y-2">
      <h3 class="text-lg font-semibold">Default Popover</h3>
      <Popover1
        id="default-popover"
        icon={mdiInformationOutline}
        title="Default Popover"
        variant={buttonVariant.filled}
      >
        <div class="space-y-2 p-2">
          <p>This is the content of a default popover.</p>
          <p>It appears on hover or click of the summary.</p>
          <ul class="list-disc pl-4 text-sm">
            <li>Default variant styling</li>
            <li>Icon and title in summary</li>
            <li>Positioned absolutely below</li>
          </ul>
        </div>
      </Popover1>
    </div>

    <div class="space-y-2">
      <h3 class="text-lg font-semibold">Ghost Variant Popover</h3>
      <Popover1
        id="ghost-popover"
        icon={mdiAlertOutline}
        title="Ghost Variant"
        variant={buttonVariant.ghost}
      >
        <div class="space-y-2 p-2 max-w-xs">
          <p>Ghost variant with transparent background for summary.</p>
          <p>Suitable for inline or subtle popovers.</p>
        </div>
      </Popover1>
    </div>

    <div class="space-y-2">
      <h3 class="text-lg font-semibold">Link Variant Popover</h3>
      <Popover1
        id="link-popover"
        icon={mdiCodeTags}
        title="Link Style Popover"
        variant={buttonVariant.link}
      >
        <div class="space-y-2 p-2">
          <p>Link variant appears as underlined text with icon.</p>
          <p>Ideal for navigational or informational tooltips.</p>
          <p>The popover content can include links or other interactive elements.</p>
        </div>
      </Popover1>
    </div>

    <div class="space-y-2">
      <h3 class="text-lg font-semibold">Multiple Popovers</h3>
      <div class="space-y-3 flex flex-col items-start">
        <Popover1
          id="multi-1"
          icon={mdiInformationOutline}
          title="Popover 1"
          variant={buttonVariant.outline}
        >
          <p>Content for first popover.</p>
        </Popover1>

        <Popover1
          id="multi-2"
          icon={mdiAlertOutline}
          title="Popover 2"
          variant={buttonVariant.subtle}
        >
          <p>Content for second popover.</p>
        </Popover1>

        <Popover1
          id="multi-3"
          icon={mdiCodeTags}
          title="Popover 3"
          variant={buttonVariant.filledRed}
        >
          <p>Content for third popover with destructive styling.</p>
        </Popover1>
      </div>
    </div>

    <div class="space-y-2">
      <h3 class="text-lg font-semibold">Popover with Complex Content</h3>
      <Popover1
        id="complex-popover"
        icon={mdiInformationOutline}
        title="Complex Content"
        variant={buttonVariant.filled}
      >
        <div class="space-y-3 p-3 max-w-sm">
          <p>Popover with more complex content layout.</p>
          <div class="grid grid-cols-2 gap-2 text-sm">
            <div class="bg-gray-100 dark:bg-gray-700 p-2 rounded">
              <p>Section 1</p>
            </div>
            <div class="bg-gray-100 dark:bg-gray-700 p-2 rounded">
              <p>Section 2</p>
            </div>
          </div>
          <p class="text-xs text-gray-500">Footer text in popover.</p>
        </div>
      </Popover1>
    </div>

    <div class="space-y-2">
      <h3 class="text-lg font-semibold">Long Title Popover</h3>
      <Popover1
        id="long-title-popover"
        icon={mdiCodeTags}
        title="This is a very long popover title that demonstrates wrapping behavior in the summary area"
        variant={buttonVariant.ghost}
      >
        <div class="space-y-2 p-2 max-w-xs">
          <p>Popover with wrapped title.</p>
          <p>The summary handles long titles gracefully.</p>
        </div>
      </Popover1>
    </div>
  </div>
</BaseLayout>
