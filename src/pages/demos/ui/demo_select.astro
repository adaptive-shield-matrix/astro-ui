---
import BaseLayout from "@/layouts/BaseLayout.astro"
import { classesBg } from "~/page/classesBg"
import Select from "~/select/Select.astro"

const options = Object.keys(classesBg)
---

<BaseLayout title="Demo Select">
  <div class="mb-4">
    <p>Select a background color for the demo div below:</p>
  </div>

  <div class="mb-4">
    <Select initialValue="white" options={options} id="bg-select" />
  </div>

  <div id="demo-div" class="p-4 border bg-white dark:bg-black">
    This is the demo div. Its background will change based on your selection.
  </div>
</BaseLayout>

<script define:vars={{ classesBg }}>
  const select = document.getElementById("bg-select")
  const demoDiv = document.getElementById("demo-div")

  select.addEventListener("change", (e) => {
    const value = e.target.value
    const bgClass = classesBg[value]
    demoDiv.className = `p-4 border ${bgClass}`
  })
</script>
